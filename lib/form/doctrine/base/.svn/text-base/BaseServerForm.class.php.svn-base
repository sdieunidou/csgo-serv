<?php

/**
 * Server form base class.
 *
 * @method Server getObject() Returns the current form's model object
 *
 * @package    jeuxsteam
 * @subpackage form
 * @author     Your name here
 * @version    SVN: $Id: sfDoctrineFormGeneratedTemplate.php 29553 2010-05-20 14:33:00Z Kris.Wallsmith $
 */
abstract class BaseServerForm extends BaseFormDoctrine
{
  public function setup()
  {
    $this->setWidgets(array(
      'id'          => new sfWidgetFormInputHidden(),
      'ip'          => new sfWidgetFormInputText(),
      'port'        => new sfWidgetFormInputText(),
      'isp'         => new sfWidgetFormInputText(),
      'country'     => new sfWidgetFormInputText(),
      'map'         => new sfWidgetFormInputText(),
      'hostname'    => new sfWidgetFormInputText(),
      'players'     => new sfWidgetFormInputText(),
      'maxplayer'   => new sfWidgetFormInputText(),
      'is_online'   => new sfWidgetFormInputCheckbox(),
      'password'    => new sfWidgetFormInputCheckbox(),
      'is_banned'   => new sfWidgetFormInputCheckbox(),
      'last_online' => new sfWidgetFormDateTime(),
      'game_id'     => new sfWidgetFormDoctrineChoice(array('model' => $this->getRelatedModelName('Game'), 'add_empty' => false)),
      'user_id'     => new sfWidgetFormDoctrineChoice(array('model' => $this->getRelatedModelName('sfGuardUser'), 'add_empty' => true)),
      'slug'        => new sfWidgetFormInputText(),
      'created_at'  => new sfWidgetFormDateTime(),
      'updated_at'  => new sfWidgetFormDateTime(),
    ));

    $this->setValidators(array(
      'id'          => new sfValidatorChoice(array('choices' => array($this->getObject()->get('id')), 'empty_value' => $this->getObject()->get('id'), 'required' => false)),
      'ip'          => new sfValidatorString(array('max_length' => 15)),
      'port'        => new sfValidatorInteger(),
      'isp'         => new sfValidatorString(array('max_length' => 255)),
      'country'     => new sfValidatorString(array('max_length' => 255)),
      'map'         => new sfValidatorString(array('max_length' => 255)),
      'hostname'    => new sfValidatorString(array('max_length' => 255)),
      'players'     => new sfValidatorInteger(),
      'maxplayer'   => new sfValidatorInteger(),
      'is_online'   => new sfValidatorBoolean(array('required' => false)),
      'password'    => new sfValidatorBoolean(array('required' => false)),
      'is_banned'   => new sfValidatorBoolean(array('required' => false)),
      'last_online' => new sfValidatorDateTime(),
      'game_id'     => new sfValidatorDoctrineChoice(array('model' => $this->getRelatedModelName('Game'))),
      'user_id'     => new sfValidatorDoctrineChoice(array('model' => $this->getRelatedModelName('sfGuardUser'), 'required' => false)),
      'slug'        => new sfValidatorString(array('max_length' => 255, 'required' => false)),
      'created_at'  => new sfValidatorDateTime(),
      'updated_at'  => new sfValidatorDateTime(),
    ));

    $this->widgetSchema->setNameFormat('server[%s]');

    $this->errorSchema = new sfValidatorErrorSchema($this->validatorSchema);

    $this->setupInheritance();

    parent::setup();
  }

  public function getModelName()
  {
    return 'Server';
  }

}
